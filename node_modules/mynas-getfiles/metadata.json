{
    "id": "nasgraph-getfiles",
    "name": "Get files",

    "input": [{
        "id": "path",
        "label": "Folder",
        "description": "",
        "type": "path",
        "mandatory": true
    }, {
        "id": "extensions",
        "label": "File extensions",
        "type": "string",
        "description": "Extensions to search through the folder, separated by ;",
        "mandatory": false
    }, {
        "id": "showExtensions",
        "label": "Show file extensions ?",
        "type": "checkbox",
        "description": "Return the file name with it's extension ?",
        "mandatory": false
    }],

    "output": [{
        "type": "array",
        "array": [{
            "id": "path",
            "type": "string",
            "label": "Path",
            "description": "File full path"
        }, {
            "id": "name",
            "type": "string",
            "label": "File name",
            "description": "File name"
        }, {
            "id": "subtitlePath",
            "type": "string",
            "label": "Subtitle path"
        }]
    }]

}
